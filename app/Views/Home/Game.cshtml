@model Game

@{
    ViewData["Title"] = "Game";
}

<div class="text-center">
    
    <form asp-controller="Home" asp-action="Game">
        <div class="qnaForm">
            <input class="button-nav" name="submit" type="submit" id="@Model.fifty_fifty_used" value="50:50" />
            <div id="score">Score: @Model.score</div>
            @if (@Model.score < millionaire.Models.Game.maxScore && !@Model.gameOver)
            {
                @Model.questions[0].text<br>
                @foreach(var item in Model.answers.Where(x => x.questionId == Model.questions[0].Id))
                {
                    <div class="@item.correct"><input type="radio" name="user-answer" asp-for="chosenAnswer" value="@item.Id" />@item.text</div>
                }
                <input class="button-nav" name="submit" type="submit" id="submit" value="Answer" />
            }
        </div>
    </form>
    <div>@Model.result</div><br />
    <form asp-controller="Home" asp-action="Index">
        <button class="button-nav">Start over!</button>
    </form>    
</div>